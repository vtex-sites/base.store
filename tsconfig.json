{
  "extends": "@vtex/tsconfig",
  "compilerOptions": {
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "module": "ESNext",
    "rootDir": ".",
    "baseUrl": ".",
    "noEmit": true,
    "allowJs": true,
    "paths": {
      "src/*": ["src/*"],
      "@generated/*": ["@generated/*"]
    },
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "gatsby-ssr.tsx",
    "gatsby-browser.tsx",
    "@generated/**/*.ts",
    "src/store.config.js"
  ],
  "exclude": ["node_modules", "public"]
}
