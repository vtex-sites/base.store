{
  "extends": "@vtex/tsconfig",
  "compilerOptions": {
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "module": "ESNext",
    "rootDir": ".",
    "baseUrl": ".",
    "noEmit": true,
    "allowJs": true,
    "paths": {
      "src/*": ["src/*"],
      "@generated/*": ["@generated/*"]
    },
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*.ts", "src/**/*.tsx", "@generated/**/*.ts"],
  "exclude": ["node_modules", "public"]
}
